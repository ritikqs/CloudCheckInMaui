<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#00BFAE</Color>
    <Color x:Key="PrimaryDark">#005B5C</Color>
    <Color x:Key="PrimaryDarkText">#1A2A32</Color>
    <Color x:Key="Secondary">#FFD600</Color>
    <Color x:Key="SecondaryDarkText">#FF6F00</Color>
    <Color x:Key="Tertiary">#304FFE</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#181818</Color>
    <Color x:Key="Gray">#B0B0B0</Color>
    <Color x:Key="LightGray">#F3F6FB</Color>
    <Color x:Key="Magenta">#D72660</Color>
    <Color x:Key="MidnightBlue">#23235B</Color>
    <Color x:Key="OffBlack">#232323</Color>

    <!-- App-specific colors -->
    <Color x:Key="NewThemeTextColor">#6bbd46</Color>
    <Color x:Key="AppThemeColor">#4d6da1</Color>
    <Color x:Key="BlueHeaderColor">#4d6da1</Color>
    <Color x:Key="LightBlueColor">#E3F2FD</Color>
    <Color x:Key="Green">#3bb54a</Color>
    <Color x:Key="Red">#FF5252</Color>
    <Color x:Key="Transparent">#00FFFFFF</Color>
    <Color x:Key="GradientStartColor">#6bbd46</Color>
    <Color x:Key="GradientEndColor">#304FFE</Color>
    <Color x:Key="AuthorizedColor">#FFD600</Color>
    <Color x:Key="ShiftButtonStartColor">#304FFE</Color>
    <Color x:Key="ShiftButtonEndColor">#00BFAE</Color>

    <Color x:Key="Gray100">#F3F3F3</Color>
    <Color x:Key="Gray200">#E0E0E0</Color>
    <Color x:Key="Gray300">#CCCCCC</Color>
    <Color x:Key="Gray400">#B0B0B0</Color>
    <Color x:Key="Gray500">#8A8A8A</Color>
    <Color x:Key="Gray600">#5A5A5A</Color>
    <Color x:Key="Gray900">#232323</Color>
    <Color x:Key="Gray950">#181818</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}"/>
    <SolidColorBrush x:Key="AppThemeBrush" Color="{StaticResource AppThemeColor}"/>
    <SolidColorBrush x:Key="NewThemeTextBrush" Color="{StaticResource NewThemeTextColor}"/>
    <SolidColorBrush x:Key="GradientStartBrush" Color="{StaticResource GradientStartColor}"/>
    <SolidColorBrush x:Key="GradientEndBrush" Color="{StaticResource GradientEndColor}"/>
    <SolidColorBrush x:Key="AuthorizedBrush" Color="{StaticResource AuthorizedColor}"/>
    <SolidColorBrush x:Key="ShiftButtonStartBrush" Color="{StaticResource ShiftButtonStartColor}"/>
    <SolidColorBrush x:Key="ShiftButtonEndBrush" Color="{StaticResource ShiftButtonEndColor}"/>
</ResourceDictionary>