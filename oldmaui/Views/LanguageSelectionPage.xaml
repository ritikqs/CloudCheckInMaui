<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CloudCheckInMaui.Views.LanguageSelectionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:translater="clr-namespace:CloudCheckInMaui.Resources"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">
    <Grid
        Padding="20"
        RowDefinitions="40,*,30"
        VerticalOptions="Fill">
        <Label
            Grid.Row="0"
            FontAttributes="Bold"
            FontSize="18"
            HorizontalOptions="Start"
            Text="{translater:Translate SelectLanguage}"
            TextColor="Black"
            VerticalOptions="Center" />
        <CollectionView
            x:Name="LanguageList"
            Grid.Row="1"
            ItemsSource="{Binding LanguageList}"
            SelectionMode="Single"
            SelectedItem="{Binding SelectedLanguage}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Padding="0,5"
                        ColumnDefinitions="*,30"
                        HeightRequest="40"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center">
                        <Label
                            FontSize="12"
                            HorizontalOptions="Start"
                            Text="{Binding Name}"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Image
                            Grid.Column="1"
                            HeightRequest="15"
                            HorizontalOptions="End"
                            IsVisible="{Binding IsSelected}"
                            Source="tick_icon.png"
                            VerticalOptions="Center"
                            WidthRequest="20" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label
            Grid.Row="2"
            FontAttributes="Bold"
            FontSize="15"
            HorizontalOptions="End"
            Text="{translater:Translate Next}"
            TextColor="{StaticResource NewThemeTextColor}"
            VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NextButtonCommand}" />
            </Label.GestureRecognizers>
        </Label>
    </Grid>
</ContentPage> 