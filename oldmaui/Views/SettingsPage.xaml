<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CloudCheckInMaui.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:header="clr-namespace:CloudCheckInMaui.Views.Headers"
    xmlns:translater="clr-namespace:CloudCheckInMaui.Resources"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="50,40,*">
        <header:CustomTitleBar Grid.Row="0" />
        <Label
            Grid.Row="1"
            FontFamily="MediumFont"
            FontSize="18"
            HorizontalOptions="Center"
            Text="{translater:Translate Settings}"
            TextColor="Black"
            VerticalOptions="Center" />
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="20" Padding="20">
                <Frame Padding="15" BorderColor="LightGray" CornerRadius="10">
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                        <Image Grid.Row="0" Grid.Column="0" Source="language.png" HeightRequest="24" WidthRequest="24" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{translater:Translate Language}" VerticalOptions="Center" Margin="10,0,0,0" />
                        <Image Grid.Row="0" Grid.Column="2" Source="arrow_right.png" HeightRequest="16" WidthRequest="16" />
                        
                        <BoxView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="1" Color="LightGray" Margin="0,10,0,0" />
                        
                        <Image Grid.Row="2" Grid.Column="0" Source="notifications.png" HeightRequest="24" WidthRequest="24" Margin="0,15,0,0" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{translater:Translate Notifications}" VerticalOptions="Center" Margin="10,15,0,0" />
                        <Switch Grid.Row="2" Grid.Column="2" IsToggled="{Binding NotificationsEnabled}" />
                    </Grid>
                </Frame>
                
                <Frame Padding="15" BorderColor="LightGray" CornerRadius="10">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Image Grid.Row="0" Grid.Column="0" Source="theme.png" HeightRequest="24" WidthRequest="24" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{translater:Translate Theme}" VerticalOptions="Center" Margin="10,0,0,0" />
                        <Picker Grid.Row="0" Grid.Column="2" ItemsSource="{Binding ThemeOptions}" SelectedItem="{Binding SelectedTheme}" />
                    </Grid>
                </Frame>
                
                <Frame Padding="15" BorderColor="LightGray" CornerRadius="10">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Image Grid.Row="0" Grid.Column="0" Source="about.png" HeightRequest="24" WidthRequest="24" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{translater:Translate About}" VerticalOptions="Center" Margin="10,0,0,0" />
                        <Image Grid.Row="0" Grid.Column="2" Source="arrow_right.png" HeightRequest="16" WidthRequest="16" />
                    </Grid>
                </Frame>
                
                <Button Text="Logout" 
                        BackgroundColor="{StaticResource NewThemeTextColor}" 
                        TextColor="White" 
                        HorizontalOptions="Center"
                        WidthRequest="200"
                        Command="{Binding LogoutCommand}" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage> 