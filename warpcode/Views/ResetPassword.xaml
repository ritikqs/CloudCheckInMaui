<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CCIMIGRATION.Views.ResetPassword"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:const="clr-namespace:CCIMIGRATION.ConstantHelper"
    xmlns:converter="clr-namespace:CCIMIGRATION.Converter"
    xmlns:customControl="clr-namespace:CCIMIGRATION.CustomControls"
    xmlns:header="clr-namespace:CCIMIGRATION.CustomControls.CustomHeader"
    xmlns:icons="clr-namespace:CCIMIGRATION.Fonts"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:translater="clr-namespace:CCIMIGRATION.MultilanguageHelper"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:InValidFrameColorConverter x:Key="ValidationErrorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid Padding="10" RowDefinitions="50,40,Auto">
            <Label
                Grid.Row="0"
                HorizontalOptions="Start"
                TextColor="Red"
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontFamily="SolidIcons" Text="{x:Static icons:Icons.ChevronLeft}" />
                        <Span
                            FontAttributes="Bold"
                            FontFamily="MediumFont"
                            FontSize="15"
                            Text="  Back" />
                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label
                Grid.Row="1"
                Margin="10,0,10,0"
                FontFamily="MediumFont"
                FontSize="16"
                Text="{translater:Translate ResetPassword}"
                TextColor="Black" />
            <StackLayout
                Grid.Row="2"
                Margin="10,0"
                Spacing="10">
                <Grid RowDefinitions="50,Auto" RowSpacing="0">
                    <Button
                        Grid.Row="0"
                        Background="#e6e6e6"
                        BorderColor="Transparent"
                        CornerRadius="8"
                        HeightRequest="60"
                        HorizontalOptions="Fill"
                        IsEnabled="False"
                        VerticalOptions="Center" />
                    <customControl:CustomEntry
                        x:Name="code"
                        Grid.Row="0"
                        Margin="10,0"
                        FontFamily="LightFont"
                        IsPassword="True"
                        Keyboard="Numeric"
                        MaxLength="6"
                        Placeholder="{translater:Translate ResetCode}"
                        PlaceholderColor="{StaticResource Gray}"
                        Text="{Binding Code}"
                        TextChanged="CodeTextChanged"
                        TextColor="Black" />
                    <Label
                        Grid.Row="1"
                        FontSize="12"
                        IsVisible="{Binding IsCodeNotValid}"
                        Text="{translater:Translate CodeValidation}"
                        TextColor="Red" />
                </Grid>
                <Grid RowDefinitions="50,Auto" RowSpacing="0">
                    <Button
                        Grid.Row="0"
                        Background="#e6e6e6"
                        BorderColor="Transparent"
                        CornerRadius="8"
                        HeightRequest="60"
                        HorizontalOptions="Fill"
                        IsEnabled="False"
                        VerticalOptions="Center" />
                    <customControl:CustomEntry
                        x:Name="password"
                        Grid.Row="0"
                        Margin="10,0"
                        FontFamily="LightFont"
                        IsPassword="True"
                        Keyboard="Numeric"
                        MaxLength="10"
                        Placeholder="{translater:Translate PinPlaceholder}"
                        PlaceholderColor="{StaticResource Gray}"
                        Text="{Binding Password}"
                        TextChanged="PasswordTextChanged"
                        TextColor="Black" />
                    <Label
                        Grid.Row="1"
                        FontSize="12"
                        IsVisible="{Binding IsPasswordNotValid}"
                        Text="{translater:Translate PinValidation}"
                        TextColor="Red" />
                </Grid>
                <Grid RowDefinitions="50,Auto" RowSpacing="0">
                    <Button
                        Grid.Row="0"
                        Background="#e6e6e6"
                        BorderColor="Transparent"
                        CornerRadius="8"
                        HeightRequest="60"
                        HorizontalOptions="Fill"
                        IsEnabled="False"
                        VerticalOptions="Center" />
                    <customControl:CustomEntry
                        x:Name="confirmPassword"
                        Grid.Row="0"
                        Margin="10,0"
                        FontFamily="LightFont"
                        IsPassword="True"
                        Keyboard="Numeric"
                        MaxLength="10"
                        Placeholder="{translater:Translate ConfirmPasswordPlaceholder}"
                        PlaceholderColor="{StaticResource Gray}"
                        Text="{Binding ConfirmPassword}"
                        TextChanged="ConfirmPasswordTextChanged"
                        TextColor="Black" />
                    <Label
                        Grid.Row="1"
                        FontSize="12"
                        IsVisible="{Binding IsConfirmPasswordNotValid}"
                        Text="{translater:Translate ConfirmPinValidation}"
                        TextColor="Red" />
                </Grid>
                <customControl:CustomButton
                    Grid.Row="11"
                    Command="{Binding SubmitButtonCommand}"
                    HorizontalOptions="Center"
                    Style="{StaticResource Optrax_Button}"
                    Text="{translater:Translate Submit}"
                    VerticalOptions="Center" />

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>