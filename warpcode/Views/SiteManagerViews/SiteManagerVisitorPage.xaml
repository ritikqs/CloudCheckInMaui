<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CCIMIGRATION.SiteManagerViews.SiteManagerVisitorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:header="clr-namespace:CCIMIGRATION.CustomControls.SiteManagerHeader"
    xmlns:icons="clr-namespace:CCIMIGRATION.Fonts"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:translater="clr-namespace:CCIMIGRATION.MultilanguageHelper"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid
            Padding="10,0"
            BackgroundColor="White"
            RowDefinitions="50,40,*"
            RowSpacing="10">
            <Label
                Grid.Row="0"
                HorizontalOptions="Start"
                TextColor="Black"
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontFamily="SolidIcons" Text="{x:Static icons:Icons.ChevronLeft}" />
                        <Span
                            FontAttributes="Bold"
                            FontFamily="MediumFont"
                            FontSize="15"
                            Text="  Back" />
                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label
                Grid.Row="1"
                FontFamily="MediumFont"
                FontSize="18"
                HorizontalOptions="Center"
                Text="{translater:Translate PageTitleVisitors}"
                TextColor="{StaticResource Black}"
                VerticalOptions="Center" />
            <!--<header:MenuPageHeader Title="{translater:Translate PageTitleVisitors}" Grid.Row="0" />-->
            <!--<Button
                Grid.Row="2"
                Margin="10,0"
                Padding="10,0"
                FontSize="10"
                HeightRequest="30"
                HorizontalOptions="End"
                Style="{StaticResource Theme_Button}"
                Text="{translater:Translate AddNewVisitor}"
                VerticalOptions="End" />-->
            <ListView
                x:Name="visitorList"
                Grid.Row="2"
                Margin="10,0"
                BackgroundColor="{StaticResource White}"
                HasUnevenRows="True"
                IsPullToRefreshEnabled="True"
                IsRefreshing="{Binding IsListRefreshing}"
                ItemTapped="visitorList_ItemTapped"
                ItemsSource="{Binding VisitorsList}"
                RefreshCommand="{Binding VisitorListRefreshCommand}"
                RowHeight="170"
                SelectionMode="None"
                SeparatorVisibility="None"
                VerticalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame
                                Margin="5"
                                Padding="10"
                                BackgroundColor="{StaticResource White}"
                                BorderColor="{StaticResource LightGray}"
                                CornerRadius="5"
                                HasShadow="False">
                                <Grid
                                    BackgroundColor="{StaticResource Transparent}"
                                    ColumnSpacing="5"
                                    RowDefinitions="30,*,30"
                                    RowSpacing="2">
                                    <Label
                                        Grid.Row="0"
                                        FontFamily="MediumFont"
                                        FontSize="16"
                                        HorizontalOptions="StartAndExpand"
                                        MaxLines="1"
                                        Text="{Binding Name}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="Center" />
                                    <Grid
                                        Grid.Row="1"
                                        ColumnDefinitions="*,*,*"
                                        ColumnSpacing="5"
                                        VerticalOptions="Center">
                                        <StackLayout
                                            Grid.Column="0"
                                            Margin="10,0"
                                            Orientation="Vertical"
                                            VerticalOptions="Fill">
                                            <Frame
                                                Padding="10,0"
                                                Background="{DynamicResource BackgroundGradient}"
                                                CornerRadius="15"
                                                HasShadow="False"
                                                HeightRequest="30"
                                                HorizontalOptions="Fill"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontFamily="LightFont"
                                                    FontSize="12"
                                                    HorizontalOptions="Center"
                                                    Text="{translater:Translate Contractor}"
                                                    TextColor="{StaticResource White}"
                                                    VerticalOptions="Center" />

                                            </Frame>

                                            <Label
                                                FontFamily="LightFont"
                                                FontSize="12"
                                                Text="{Binding Contractor}"
                                                TextColor="{StaticResource Black}" />
                                        </StackLayout>
                                        <StackLayout
                                            Grid.Column="1"
                                            Margin="10,0"
                                            Orientation="Vertical">
                                            <Frame
                                                Padding="10,0"
                                                Background="{DynamicResource BackgroundGradient}"
                                                CornerRadius="15"
                                                HasShadow="False"
                                                HeightRequest="30"
                                                HorizontalOptions="Fill"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontFamily="LightFont"
                                                    FontSize="12"
                                                    HorizontalOptions="Center"
                                                    Text="{translater:Translate Employer}"
                                                    TextColor="{StaticResource White}"
                                                    VerticalOptions="Center" />

                                            </Frame>

                                            <Label
                                                FontFamily="LightFont"
                                                FontSize="12"
                                                Text="{Binding Employer}"
                                                TextColor="{StaticResource Black}" />
                                        </StackLayout>
                                        <StackLayout
                                            Grid.Column="2"
                                            Margin="10,0"
                                            Orientation="Vertical">
                                            <Frame
                                                Padding="10,0"
                                                Background="{DynamicResource BackgroundGradient}"
                                                CornerRadius="15"
                                                HasShadow="False"
                                                HeightRequest="30"
                                                HorizontalOptions="Fill"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontFamily="LightFont"
                                                    FontSize="12"
                                                    HorizontalOptions="Center"
                                                    Text="{translater:Translate Trade}"
                                                    TextColor="{StaticResource White}"
                                                    VerticalOptions="Center" />

                                            </Frame>

                                            <Label
                                                FontFamily="LightFont"
                                                FontSize="12"
                                                Text="{Binding Trade}"
                                                TextColor="{StaticResource Black}" />
                                        </StackLayout>
                                    </Grid>

                                    <StackLayout
                                        Grid.Row="2"
                                        HorizontalOptions="End"
                                        Orientation="Horizontal"
                                        Spacing="15"
                                        VerticalOptions="Center">
                                        <Frame
                                            Padding="0"
                                            BackgroundColor="{StaticResource Green}"
                                            CornerRadius="15"
                                            HasShadow="False"
                                            HeightRequest="30"
                                            WidthRequest="80">
                                            <Label
                                                FontFamily="LightFont"
                                                FontSize="14"
                                                HorizontalOptions="Center"
                                                Text="Accept"
                                                TextColor="White"
                                                VerticalOptions="Center" />

                                        </Frame>
                                        <Frame
                                            Padding="0"
                                            BackgroundColor="{StaticResource Red}"
                                            CornerRadius="15"
                                            HasShadow="False"
                                            HeightRequest="30"
                                            WidthRequest="80">
                                            <Label
                                                FontFamily="LightFont"
                                                FontSize="14"
                                                HorizontalOptions="Center"
                                                Text="Reject"
                                                TextColor="White"
                                                VerticalOptions="Center" />

                                        </Frame>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Frame
                Grid.Row="2"
                Margin="10,0,10,30"
                Padding="0"
                Background="{StaticResource BackgroundGradient}"
                CornerRadius="30"
                HasShadow="False"
                HeightRequest="60"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="60">
                <Label
                    FontFamily="LightIcons"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="{x:Static icons:Icons.Plus}"
                    TextColor="White"
                    VerticalOptions="Center" />
                <!--<Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="NewLeave_Tapped_1" />
                </Frame.GestureRecognizers>-->
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>