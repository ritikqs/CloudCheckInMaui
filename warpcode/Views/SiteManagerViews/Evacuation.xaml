<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CCIMIGRATION.SiteManagerViews.Evacuation"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:header="clr-namespace:CCIMIGRATION.CustomControls.SiteManagerHeader"
    xmlns:icons="clr-namespace:CCIMIGRATION.Fonts"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:translater="clr-namespace:CCIMIGRATION.MultilanguageHelper"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource White}" RowDefinitions="50,50,*">
            <Label
                Grid.Row="0"
                Margin="10,0"
                HorizontalOptions="Start"
                TextColor="Black"
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontFamily="SolidIcons" Text="{x:Static icons:Icons.ChevronLeft}" />
                        <Span
                            FontAttributes="Bold"
                            FontFamily="MediumFont"
                            FontSize="15"
                            Text="  Back" />
                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label
                Grid.Row="1"
                FontFamily="MediumFont"
                FontSize="18"
                HorizontalOptions="Center"
                Text="{translater:Translate PageTitleEvacuation}"
                TextColor="{StaticResource Black}"
                VerticalOptions="Center" />
            <!--<header:MenuPageHeader Title="{translater:Translate PageTitleEvacuation}" Grid.Row="0" />-->
            <CollectionView
                x:Name="evacuatedList"
                Grid.Row="2"
                Margin="10"
                BackgroundColor="{StaticResource Transparent}"
                ItemsSource="{Binding EvacuatedUserList}"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Frame
                            Margin="5"
                            Padding="5"
                            BackgroundColor="{StaticResource White}"
                            BorderColor="{StaticResource LightBlueColor}"
                            CornerRadius="5"
                            HasShadow="False">
                            <Grid
                                Padding="5,10"
                                BackgroundColor="{StaticResource Transparent}"
                                ColumnDefinitions="20,*,30"
                                ColumnSpacing="5"
                                RowSpacing="2">
                                <Frame
                                    Grid.Column="0"
                                    Margin="0,5,0,0"
                                    Padding="0"
                                    Background="{StaticResource BackgroundGradient}"
                                    CornerRadius="5"
                                    HasShadow="False"
                                    HeightRequest="10"
                                    HorizontalOptions="End"
                                    VerticalOptions="Start"
                                    WidthRequest="10" />
                                <StackLayout Grid.Row="0" Grid.Column="1">
                                    <Label
                                        FontFamily="MediumFont"
                                        FontSize="16"
                                        HorizontalOptions="StartAndExpand"
                                        MaxLines="1"
                                        Text="{Binding Name}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="Center" />
                                    <Label
                                        FontFamily="LightFont"
                                        FontSize="14"
                                        HorizontalOptions="StartAndExpand"
                                        MaxLines="1"
                                        Text="{Binding TradeName}"
                                        TextColor="{StaticResource Black}"
                                        VerticalOptions="Center" />
                                </StackLayout>

                                <CheckBox
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    HorizontalOptions="EndAndExpand"
                                    IsChecked="{Binding IsChecked}"
                                    Color="{StaticResource AppThemeColor}" />


                            </Grid>
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                        <Label
                            HorizontalOptions="Center"
                            Text="{translater:Translate NoData}"
                            VerticalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
            <Grid
                Grid.Row="2"
                Margin="20,30"
                BackgroundColor="Transparent"
                ColumnDefinitions="Auto,*"
                HeightRequest="50"
                HorizontalOptions="End"
                VerticalOptions="End">
                <Frame
                    Grid.Column="0"
                    Margin="0,0,-30,0"
                    Padding="0,0,30,0"
                    BackgroundColor="{StaticResource LightBlueColor}"
                    CornerRadius="20"
                    HasShadow="False"
                    HeightRequest="40"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center">
                    <Label
                        Padding="10,0,0,0"
                        HorizontalOptions="Start"
                        Text="{translater:Translate SendAlert}"
                        TextColor="{StaticResource Black}"
                        VerticalOptions="Center" />
                </Frame>
                <Frame
                    Grid.Column="1"
                    Padding="0"
                    Background="{DynamicResource BackgroundGradient}"
                    CornerRadius="25"
                    HasShadow="False"
                    HeightRequest="50"
                    HorizontalOptions="End"
                    VerticalOptions="Fill"
                    WidthRequest="50">
                    <Image
                        HeightRequest="10"
                        HorizontalOptions="Center"
                        Source="right_icon"
                        VerticalOptions="Fill"
                        WidthRequest="15" />
                </Frame>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SendAlertButtonCommand}" />
                </Grid.GestureRecognizers>
            </Grid>
            <Grid Grid.RowSpan="3" IsVisible="{Binding IsEvacuationMessagePopupVisible}">
                <BoxView
                    BackgroundColor="Black"
                    HorizontalOptions="Fill"
                    Opacity="0.5"
                    VerticalOptions="Fill" />
                <Frame
                    Margin="20,0"
                    BackgroundColor="{StaticResource White}"
                    CornerRadius="20"
                    HasShadow="False"
                    VerticalOptions="Center">
                    <Grid RowDefinitions="20,Auto,40,150,40">
                        <Label
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            FontFamily="SolidFont"
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="{translater:Translate AlertMessage}"
                            TextColor="Black" />
                        <StackLayout Grid.Row="1" HorizontalOptions="Start">
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontFamily="Icons"
                                            FontSize="15"
                                            Text="{x:Static icons:Icons.Camera}"
                                            TextColor="{StaticResource AppThemeColor}" />
                                        <Span Text=" " />
                                        <Span Text="Add Photo" TextColor="{StaticResource AppThemeColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ClickPhotoCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Grid
                                HeightRequest="80"
                                IsVisible="{Binding IsImageAvailable}"
                                WidthRequest="80">
                                <Frame
                                    Margin="5"
                                    Padding="0"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <Image Aspect="AspectFill" Source="{Binding EvacuationImage}" />
                                </Frame>
                                <Label
                                    BackgroundColor="White"
                                    FontFamily="Icons"
                                    FontSize="15"
                                    HeightRequest="15"
                                    HorizontalOptions="End"
                                    HorizontalTextAlignment="Center"
                                    Text="{x:Static icons:Icons.Trash}"
                                    TextColor="Red"
                                    VerticalOptions="Start"
                                    VerticalTextAlignment="Center"
                                    WidthRequest="15">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding RemovePhotoCommand}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </StackLayout>

                        <Entry
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            BackgroundColor="White"
                            FontFamily="LightFont"
                            Placeholder="Enter text"
                            Text="{Binding AlertMessage}"
                            TextColor="{StaticResource Black}"
                            VerticalOptions="Start" />
                        <StackLayout Grid.Row="3" Grid.ColumnSpan="2">
                            <Label
                                FontAttributes="Italic"
                                FontFamily="MediumFont"
                                FontSize="11"
                                HorizontalOptions="Start"
                                Text="Recents"
                                TextColor="Black" />
                            <ListView
                                x:Name="templatemessage"
                                BackgroundColor="White"
                                ItemsSource="{Binding EvacuationMessagesList}"
                                SelectedItem="{Binding SelectedEvacuationMessage}"
                                SelectionMode="Single">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Label
                                                FontAttributes="Bold"
                                                FontFamily="LightFont"
                                                HeightRequest="30"
                                                TextColor="Black"
                                                VerticalTextAlignment="Center">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Description}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackLayout>
                        <Button
                            Grid.Row="4"
                            Grid.Column="0"
                            Padding="0"
                            BackgroundColor="LightGray"
                            Command="{Binding CancelEvacuaationCommand}"
                            CornerRadius="10"
                            FontFamily="LightFont"
                            Text="{translater:Translate Cancel}"
                            TextColor="Black" />
                        <Button
                            Grid.Row="4"
                            Grid.Column="1"
                            Background="{DynamicResource BackgroundGradient}"
                            Command="{Binding SendEvacuationCommand}"
                            CornerRadius="10"
                            FontFamily="LightFont"
                            Text="{translater:Translate Send}"
                            TextColor="White" />
                    </Grid>
                </Frame>

            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>